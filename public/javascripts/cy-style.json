[ // the stylesheet for the graph
  {
    "selector": "node",
    "style": {
      "background-color": "#c9c9c9",
      "label": "data(id)"
    }
  },

  {
    "selector": "edge",
    "style": {
      "curve-style": "bezier",
      "width": 3,
      "line-color": "#fff1f1",
      "target-arrow-color": "#fff1f1",
      "target-arrow-shape": "triangle"
    }
  },
  {
    "selector": "node:selected",
    "style": {
      "background-color": "#646464",
      "label": "data(id)"
    }
  },

  {
    "selector": "edge:selected",
    "style": {
      "curve-style": "bezier",
      "width": 3,
      "line-color": "#cc2c2d",
      "target-arrow-color": "#cc2c3f",
      "target-arrow-shape": "triangle"
    }
  }
]